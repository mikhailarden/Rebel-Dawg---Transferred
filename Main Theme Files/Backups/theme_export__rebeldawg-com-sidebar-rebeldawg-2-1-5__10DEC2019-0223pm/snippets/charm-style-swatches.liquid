{%- if section.settings.charm-style-swatches -%}
{%- assign charmstyles = section.settings.charm-style-swatches  -%}
{%- else -%}
{%- assign charmstyles = 'star,heart,apple,circle,pear' -%}
{%- endif -%}



{%- assign file_extension = 'png' -%}
{%- assign styles = charmstyles | split: "," -%}
{%- for style in styles -%}
{%- assign lowercasestyle = style | downcase | prepend: 'hide-style-' | replace: " ", "_"  -%}


<div class="charm-color-swatch" {% if product.tags contains lowercasestyle %} style="display:none" {% endif %}>
            <input type="radio" name="properties[Charm Style]" value="{{ style | capitalize }}" name="tag-group" id="{{ style | capitalize }}"> 
  			<label class="perfected-circle" for="{{ style | capitalize }}"
                   style="background-color: {{ style }}; 
                          background-color:transparent;
                          background-size: 150%;
   						  background-position: center;
                          background-image: url({{ style | prepend: 'MINI_CHARM_ICONS_CENTER ALIGNMENT_' | replace: " ", "_" | append: '.' | upcase | append: file_extension | file_img_url: '300x' }})">

  </label>
								
</div>



{%- endfor -%}


